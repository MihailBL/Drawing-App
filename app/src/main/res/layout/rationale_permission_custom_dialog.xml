<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:minWidth="300dp"
    android:minHeight="200dp"
    android:gravity="center"
    android:background="#BDA2A2">

    <TextView
        android:id="@+id/tv_permissionRationaleDialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="DRAWING APP"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_permissionRationaleDialogMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="This is the message text"
        android:textSize="20sp"
        android:textColor="#514E4E"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"/>

    <Button
        android:id="@+id/btn_permissionRationaleDialogCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CANCEL"
        android:textSize="20sp"
        android:backgroundTint="#717171"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"/>
</LinearLayout>